<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/mainHeadLayout"
    android:background="@color/white"
    tools:context=".SignUpActivity">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/relativeLayout2"
            android:gravity="center" >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout2"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/relativeLayout3"
                    android:gravity="center" >

                    <view
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        class="com.pkmmte.view.CircularImageView"
                        app:border="true"
                        app:border_color="@color/transparent"
                        app:border_width="4dp"
                        app:shadow="false"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="16dp"
                        android:id="@+id/profilePicture"
                        android:scaleType="centerCrop"
                        android:background="@drawable/ico_profpic_placeholder"
                        android:layout_centerInParent="true"
                       />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Photo"
                        android:id="@+id/change"
                        android:fontFamily="sans-serif-medium"
                        android:layout_below="@+id/profilePicture"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        android:textColor="@color/base_blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3"
                        android:layout_centerInParent="true"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Photo"
                            android:id="@+id/textView3"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/base_blue" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:weightSum="2"
                    android:id="@+id/linearLayout4" >

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edfirstname"
                        android:cursorVisible="true"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:textCursorDrawable="@color/appcolor"
                        android:layout_marginRight="16dp"
                        android:hint="Name"
                        android:textColor="@color/black"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif"
                        android:layout_marginLeft="16dp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edlastname"
                        android:cursorVisible="true"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:textCursorDrawable="@color/appcolor"
                        android:layout_marginRight="16dp"
                        android:hint="Surname"
                        android:textColor="@color/black"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif" />
                </LinearLayout>


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:cursorVisible="true"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="Email Address"
                    android:textCursorDrawable="@color/appcolor"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText5"
                    android:cursorVisible="true"
                    android:padding="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@color/appcolor"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edconfirmpassword"
                    android:cursorVisible="true"
                    android:padding="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp"
                    android:textCursorDrawable="@color/appcolor"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:id="@+id/btnSignUp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/round_button"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an Account? Log In"
                    android:id="@+id/txtLoginLink"
                    android:gravity="center"
                    android:textColorLink="@color/base_blue_"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

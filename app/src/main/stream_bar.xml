<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_blue"

    android:theme="@style/CustomToolBarTheme"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
    android:minHeight="0dp" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="visible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Home"
            android:id="@+id/profilepicture_bar"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textSize="18sp" />

        <view
            class="com.pkmmte.view.CircularImageView"
            app:border="false"
            app:border_color="@color/transparent"
            app:shadow="false"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/streamProfilepicture"
            android:gravity="end"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="false"
            android:layout_marginTop="2dp"
            android:layout_marginRight="9dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:src="@drawable/ico_search_white"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/streamProfilepicture"
            android:padding="10dp" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>